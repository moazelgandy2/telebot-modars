// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id        String   @id @default(uuid())
  subject   String
  level     String
  teacher   String?
  online    OnlineOption?
  centers   Center[]
  book      Book?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OnlineOption {
  id        String   @id @default(uuid())
  available Boolean  @default(false)
  platform  String?
  times     String[]
  price     String
  courseId  String   @unique
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model Center {
  id        String   @id @default(uuid())
  name      String
  location  String
  address   String?
  mapsLink  String?
  times     String[]
  price     String
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model Book {
  id        String   @id @default(uuid())
  name      String
  price     String
  courseId  String   @unique
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model Faq {
  id        Int      @id @default(autoincrement())
  question  String
  answer    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Contact {
  id            Int      @id @default(autoincrement())
  phone         String
  whatsapp      String
  email         String
  facebook      String
  instagram     String
  workingHours  String
  responseTime  String?
  paymentMethods Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model ChatSession {
  id        String        @id @default(uuid())
  userId    String        @unique
  messages  ChatMessage[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model ChatMessage {
  id        String      @id @default(uuid())
  role      String      // "user" | "model"
  content   String
  sessionId String
  session   ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  imageUrl  String?
  createdAt DateTime    @default(now())
}
